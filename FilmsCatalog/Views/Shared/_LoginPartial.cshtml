@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Http.Extensions
@inject SignInManager<User> SignInManager
@inject UserManager<User> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">Привет, @User.Identity.Name!</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="Account" asp-action="LogOut">
                <button type="submit" class="nav-link btn btn-link text-dark">Выход</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="SignUp" asp-route-returnUrl="@Context.Request.GetEncodedPathAndQuery()">Регистрация</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="Account" asp-action="SignIn" asp-route-returnUrl="@Context.Request.GetEncodedPathAndQuery()">Вход</a>
        </li>
    }
</ul>
